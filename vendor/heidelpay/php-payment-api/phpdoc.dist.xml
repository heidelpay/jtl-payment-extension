<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
	<title>php-payment-api</title>
    <parser>
        <default-package-name>PHP Payment Api</default-package-name>
        <target>./docs/</target>
    </parser>
    <transformer>
        <target>./docs/</target>
    </transformer>
    <files>
        <directory>.</directory>
        <ignore>tests/_data/*</ignore>
        <ignore>tests/_output/*</ignore>
        <ignore>tests/_support/*</ignore>
        <ignore>vendor/*</ignore>
    </files>
    <plugins>
        <plugin path="Core" />
    </plugins>
    <transformations>
        <template name="heidelpay" />
    </transformations>
</phpdocumentor>